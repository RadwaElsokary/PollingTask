@using PollingTask.Presentation.Models
@using PollingTask.Presentation.ViewModels
@model List<UserAnswerViewModel>

<div class="container-fluid my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">All Users Answers</h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered mb-0" id="answersTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th>User Email</th>
                                    <th>Poll</th>
                                    <th>Question</th>
                                    <th>Answer</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var answer in Model)
                                {
                                    <tr data-answer-id="@answer.Id">
                                        <td>@answer.UserEmail</td>
                                        <td>@answer.PollText</td>
                                        <td>@answer.QuestionText</td>
                                        <td>@answer.AnswerText</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>